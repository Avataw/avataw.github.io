---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<h1>
  {title}
</h1>

<style>
  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    animation: color-switching 5s infinite ease-in-out;
  }

  @keyframes color-switching {
    0% {
      color: var(--color-black)
    }

    50% {
      color: var(--color-purple)
    }

    100% {
      color: var(--color-black)
    }
  }
</style>