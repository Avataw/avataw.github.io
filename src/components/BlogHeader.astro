---
import ThemeIcon from "./ThemeIcon.astro";
---

<header class="wrapper">
  <div class="headerBar">
    <h1>
      <a href="/">
        <img class="logo" src="/avataw-logo.png" width="32" height="32" />
        <span>Andre Wruszczak</span>
      </a>
    </h1>
    <ThemeIcon />
  </div>
</header>

<style>
  header {
    padding-top: 1rem;
    padding-bottom: 0.5rem;
    height: 5rem;
    align-items: stretch !important;
  }

  .headerBar {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  h1 {
    margin: 0;
    font-size: 1.5rem;
    max-width: 100%;
    display: flex;
    flex-grow: 1;
  }

  h1 a {
    text-decoration: none;
    display: inline-flex;
  }

  h1 a span {
    color: var(--theme-text);
  }

  h1 a span:hover {
    color: var(--theme-accent);
  }

  :global(html.dark) .logo {
    filter: invert();
  }
</style>
